<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_width="wrap_content"
              android:id="@+id/station_name"
              android:layout_centerHorizontal="true"
              android:layout_above="@+id/station_distance"
              android:visibility="invisible"
              android:textSize="15dp"
              android:layout_height="wrap_content"
              android:text="stationAbbrev name" />
    <TextView android:layout_width="wrap_content"
              android:id="@+id/station_distance"
              android:textSize="15dp"
              android:layout_centerHorizontal="true"
              android:visibility="invisible"
              android:layout_above="@+id/train_times"
              android:layout_height="wrap_content"
              android:text="stationAbbrev distance" />

    <LinearLayout android:id="@+id/train_times"
                  android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_centerInParent="true"
                  android:visibility="invisible"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:textSize="30dp"
                  android:id="@+id/train1time"
                  android:layout_margin="5dp"
                  android:visibility="invisible"
                  android:layout_height="wrap_content"
                  android:text="10m"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_margin="5dp"
                  android:id="@+id/train2time"
                  android:textSize="30dp"
                  android:visibility="invisible"
                  android:layout_height="wrap_content"
                  android:text="20m"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_margin="5dp"
                  android:id="@+id/train3time"
                  android:textSize="30dp"
                  android:visibility="invisible"
                  android:layout_height="wrap_content"
                  android:text="30m"/>
    </LinearLayout>
</merge>